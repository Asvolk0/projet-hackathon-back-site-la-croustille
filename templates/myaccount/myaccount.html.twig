{% extends 'base.html.twig' %}

{% block title %}Espace Mon Compte{% endblock %}

{% block body %}
<main class="spaceMyAccount">
    <h1>
        Mon compte
    </h1>
    <section>
        <a href="{{ path('app_user_account', {'id':app.user.id}) }}">
            <img class="logo" src="{{ asset('assets/img/profil.png') }}" alt="logo d'un utilisateur pour modifier les informations du compte">
            <span>
                Informations
            </span>
        </a>
        <a href="#">
            <img class="logo" src="{{ asset('assets/img/favoris.png') }}" alt="logo favoris pour accéder à la page des menus mis en favoris">
            <span>
                Favoris
            </span>
        </a>
        <a href="#">
            <img class="logo" src="{{ asset('assets/img/notation.png') }}" alt="logo favoris pour accéder à la page des menus mis en favoris">
            <span>
                Mes avis
            </span>
        </a>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN') %}
            <a href="{{ path('app_message_user_account') }}">
                <img class="logo" src="{{ asset('assets/img/message.png') }}" alt="logo message pour accéder aux messages des utilisateurs">
                <span>
                    Messages utilisateurs
                </span>
            </a>


            <a href="{{ path('app_user') }}">
                <img class="logo" src="{{ asset('assets/img/administrateur.png') }}" alt="logo message pour accéder aux mutilisateurs et aux admins du site">
                <span>
                    Rôle et Admin
                </span>
            </a>
            
            
        {% endif %}

        {% if is_granted('ROLE_SUPERADMIN') %}
            <a href="#">
                <img class="logo" src="{{ asset('assets/img/chef.png') }}" alt="logo pour ajouter un plat">
                <span>
                    Ajouter des recettes
                </span>
            </a>


            <a href="#">
                <img class="logo" src="{{ asset('assets/img/couvert.png') }}" alt="logo couvert pour accéder aux modification des recettes">
                <span>
                    Modification de recettes
                </span>
            </a>
            
            
        {% endif %}
        
    </section>

</main>

{% endblock %}
